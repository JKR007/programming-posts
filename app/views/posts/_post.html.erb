<div class='card post-card d-flex'>
  <div class='card-body'>
    <h5 class='card-title'><%= post.title %> </h5>
    <p class='card-text'>
      <div class='post-published_at'>
        <%= post.published_at.strftime('%B %d, %Y') %>
      </div>
    </p>
    <%= link_to 'Open', post_path(post), class: 'card-link' %>
  </div>
</div>
