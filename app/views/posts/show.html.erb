<main class='container'>
  <div class='mb-3'>
    <%= link_to sanitize('&larr; Back to Posts'), posts_path, class: 'btn btn-outline-primary' %>
  </div>

  <div class='card d-flex'>
  <div class='card-body'>
    <h5 class='card-title'><%= @post.title %> </h5>
    <p class='card-text'>
      <%= @post.content %>
      <div class='post-published_at'>
        <%= @post.published_at.strftime('%B %d, %Y') %>
      </div>
    </p>
  </div>
</div>
</main>
